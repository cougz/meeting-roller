---
import '../styles/d20.css';
import '../styles/animations.css';
---

<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width" />
  <title>Meeting Presenter Roller</title>
</head>
<body>
  <main>
    <h1>ðŸŽ² <span>Who's Next?</span></h1>
    <p class="subtitle">Roll the d20 to select the next presenter</p>

    <div class="dice" id="dice">
      <span class="placeholder">?</span>
    </div>

    <button id="rollBtn">Roll the Dice!</button>

    <div class="result-message" id="resultMessage" style="display: none;">
      <p>Presenter #<span id="presenterNum"></span> is up!</p>
    </div>
  </main>

  <script>
    const dice = document.getElementById('dice');
    const rollBtn = document.getElementById('rollBtn');
    const resultMessage = document.getElementById('resultMessage');
    const presenterNum = document.getElementById('presenterNum');
    let rolling = false;

    rollBtn.addEventListener('click', () => {
      if (rolling) return;
      
      rolling = true;
      rollBtn.textContent = 'Rolling...';
      rollBtn.classList.add('disabled');
      dice.classList.add('shake');
      dice.innerHTML = '<span class="placeholder">?</span>';
      resultMessage.style.display = 'none';

      setTimeout(() => {
        const result = Math.floor(Math.random() * 20) + 1;
        dice.classList.remove('shake');
        dice.innerHTML = `<span class="result">${result}</span>`;
        presenterNum.textContent = result;
        resultMessage.style.display = 'block';
        rollBtn.textContent = 'Roll the Dice!';
        rollBtn.classList.remove('disabled');
        rolling = false;
      }, 1500);
    });
  </script>
</body>
</html>
