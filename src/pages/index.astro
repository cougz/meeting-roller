---
import '../styles/d20.css';
import '../styles/animations.css';

let rolling = false;
let result = null;
let animationClass = '';

function rollDice() {
  rolling = true;
  result = null;
  animationClass = 'shake';

  setTimeout(() => {
    result = Math.floor(Math.random() * 20) + 1;
    animationClass = '';
    rolling = false;
  }, 1500);
}
---

<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width" />
  <title>Meeting Presenter Roller</title>
</head>
<body>
  <main>
    <h1>ðŸŽ² Who's Next?</h1>
    <p class="subtitle">Roll the d20 to select the next presenter</p>

    <div class={`dice ${animationClass}`} id="dice">
      {result ? <span class="result">{result}</span> : <span class="placeholder">?</span>}
    </div>

    <button disabled={rolling} onclick={rollDice} class:disabled={rolling}>
      {rolling ? 'Rolling...' : 'Roll the Dice!'}
    </button>

    {result && (
      <div class="result-message">
        <p>Presenter #{result} is up!</p>
      </div>
    )}
  </main>
</body>
</html>
